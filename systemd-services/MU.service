[Unit]
Description=MU API App
After=network.target
StartLimitIntervalSec=0

[Service]
WorkingDirectory=/home/iot/IoT/MU
Type=simple
Restart=on-failure
RestartSec=1
User=iot
Environment=PYTHONPATH=/home/iot/IoT/MU
ExecStart=/usr/bin/python3 /home/iot/IoT/MU/api/server.py

[Install]
WantedBy=multi-user.target

